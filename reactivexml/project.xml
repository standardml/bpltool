<?xml version="1.0"?>
<project>
  <pomVersion>3</pomVersion>
  <id>reactivexml</id>
  <name>Reactive XML</name>
  <groupId>bpl</groupId>
  <currentVersion>0.1</currentVersion>
  <organization>
    <name>ITU / Bigraphical Programming Languages</name>
    <url>http://www.itu.dk/research/theory/bpl/</url>
  </organization>
  <inceptionYear>2004</inceptionYear>
  <package>dk.itu.bpl.dix</package>

  <shortDescription>Distributed Reactive XML based on XML Store</shortDescription>
  <url>http://www.itu.dk/research/theory/bpl/reactivexml/</url>

  <siteAddress>localhost</siteAddress>
  <siteDirectory>${basedir}/../../www/reactivexml/</siteDirectory>

  <developers>
    <developer>
      <name>Martin Olsen</name>
      <id>mol</id>
      <organization>IT University of Copenhagen</organization>
    </developer>

    <developer>
      <name>Henning Niss</name>
      <id>hniss</id>
      <organization>IT University of Copenhagen</organization>
    </developer>

    <developer>
      <name>Thomas Hildebrandt</name>
      <id>hilde</id>
      <organization>IT University of Copenhagen</organization>
    </developer>
  </developers>

  <dependencies>
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.0</version>
    </dependency>

    <dependency>
      <groupId>plan-x</groupId>
      <artifactId>koala-xmlstore</artifactId>
      <version>0.5.5</version>
      <url>http://www.plan-x.org/xmlstore/</url>
    </dependency>

    <dependency>
      <groupId>plan-x</groupId>
      <artifactId>msd</artifactId>
      <version>1.3</version>
      <url>http://www.plan-x.org/projects/msd/</url>
    </dependency>

    <dependency>
      <groupId>plan-x</groupId>
      <artifactId>xpath</artifactId>
      <version>1.3</version>
      <url>http://www.plan-x.org/projects/xpath/</url>
    </dependency>

    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <type>jar</type>
      <url>http://http://logging.apache.org/log4j/docs/index.html/</url>
    </dependency>

    <!-- Required to run -->
    <dependency>
      <groupId>java_cup</groupId>
      <artifactId>java_cup</artifactId>
      <version>0.10</version>
      <url>http://www.cs.princeton.edu/~appel/modern/java/CUP/</url>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <!-- <unitTestSourceDirectory>src/test</unitTestSourceDirectory> -->

    <resources>
      <resource>
        <directory>${basedir}/target/lib-expanded</directory>
        <includes>
          <include>**/*.class</include>
        </includes>
      </resource>
    </resources>

    <!-- JUnit test cases -->
    <unitTest>
      <includes>
        <include>**/Test*.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/src/test-resources</directory>
          <includes>
            <include>**/*</include>
          </includes>
        </resource>
      </resources>
    </unitTest> 

  </build>
</project>

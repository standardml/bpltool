        <input type="global" name="ToShow" value="Result"/>
      </tasklet>
      -->

      <tasklet assembly ="IOTasklet" name="IOTasklet" type="MD">
        <input type="constant" name="ToShow" value="How much is 19*16"/>
      </tasklet>

      <if>
        <condition>19*16 &lt; [Result]</condition>
        <tasklet assembly ="IOTasklet" name="IOTasklet" type="MD">
          <input type="constant" name="ToShow" value="Isn't that a bit much?"/>
        </tasklet>
        <elseif>
          <condition>19*16 > [Result]</condition>
          <tasklet assembly ="IOTasklet" name="IOTasklet" type="MD">
            <input type="constant" name="ToShow" value="That's a bit low!"/>
          </tasklet>
        </elseif>
        <else>
          <sequence>
            <sequence>
              <tasklet assembly ="IOTasklet" name="IOTasklet" type="MD">
                <!--Tasklet1View-->
                <input type="constant" name="ToShow" value="Correct!"/>
              </tasklet>
            </sequence>
            <sequence>
            </sequence>
          </sequence>
        </else>
      </if>

      <tasklet assembly ="HWTasklet" name="HWTasklet" type="MD">
        <!--Tasklet1View-->
      </tasklet>

      <sequence>
        <sequence>
        </sequence>
      </sequence>
      <sequence>
      </sequence>
    </sequence>
  </process>
  <process text="Customer detail" name="CustomerDetailReadOnly">
    <sequence>
    <tasklet name="CustomerDetailTasklet" assembly ="CustomerDetailTasklet" text="Customer Details" type="CustomerDetailTasklet.CustomerDetailTasklet, CustomerDetailTasklet">
      <input type="setting" name="TaskletMode" value="View"/>
      
      <input type="global" name="CustomerId" value="SelectedCustomer"/>      
      <actions>
        <open text="Contact" priority="40" orchestration="CustomerContactDetailTasklet">
        </open>
        <open text="Credit Limit" priority="40" orchestration="CustomerCreditLimitDetailTasklet">
        </open>
      </actions>
    </tasklet>    
    </sequence>
  </process>
  <process text="CustomerContactDetailTasklet" name="CustomerContactDetailTasklet">
    <sequence>
      <tasklet name="CustomerContactDetailTasklet" assembly ="CustomerContactDetailTasklet" text="Contact Details" type="CustomerContactDetailTasklet.CustomerContactDetailTasklet, CustomerContactDetailTasklet">
      </tasklet>
    </sequence>
  </process>
  <process text="CustomerContactDetailTasklet" name="CustomerContactDetailTasklet">
    <sequence>
      <tasklet name="CustomerCreditLimitDetailTasklet" assembly ="CustomerCreditLimitDetailTasklet" text="Credit Limit" type="CustomerCreditLimitDetailTasklet.CustomerCreditLimitDetailTasklet, CustomerCreditLimitDetailTasklet">
      </tasklet>
    </sequence>
  </process>
</processes>

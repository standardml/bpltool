<?xml version="1.0" encoding="utf-8"?>
<dcrs xmlns="http://itu.dk/trustcare/dcrs/2010/">
  <dcrs-specification model-name="">
    <actions>
      <!--
      id: integer, should be unique in the specification, . used for computational purposes.
      name: user friendly name
      included: 0: not included, 1: included-->
      <action id="" name="" included="">
        <!-- May in future role ássignment of actions to roles may be -->
      </action>
    </actions>
    <constraints>

      <!--type attribute is an enumeration which can be condition/strongcondition/response/include/exclude.-->
      <constraint-set type="">

        <!--source and target on constraint should be action Ids.-->
        <constarint source="" target=""></constarint>
      </constraint-set>
    </constraints>
   

  </dcrs-specification>

  <dcrs-runtime instance-id="">
    <!--execution-trace is sequence of executed actions. 
      Here trace element is suitable sequential execution, how can we make it suitable 
      for representing concurrent executions.
    -->
    <execution-trace></execution-trace>

    <current-state>
      <actions-included>
        <action name="" />
      </actions-included>

      <actions-executed>
        <action name="" />
      </actions-executed>

      <actions-pending-response>
        <action name="" />
      </actions-pending-response>

      <!--state-accepting: values, 0: non accepting state, 1: accepting state-->
      <state-accepting></state-accepting>

      <!--state-index will be used only for infinite runs.-->
      <state-index></state-index>

    </current-state>


  </dcrs-runtime>


</dcrs>

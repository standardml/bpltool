<?xml version="1.0" encoding="ISO-8859-1"?>

<wsdl:definitions 
  targetNamespace="http://beepell.com/samples/proxy/proxy" 
  xmlns:me="http://beepell.com/samples/proxy/proxy"
  xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype" 
  xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" 
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/">
  
  <plnk:partnerLinkType name="clientPartnerLinkType">
    <plnk:role name="proxyProviderRole" portType="me:proxyPortType" />
  </plnk:partnerLinkType>

  <plnk:partnerLinkType name="serverPartnerLinkType">
    <plnk:role name="serverProviderRole" portType="me:serverPortType" />
  </plnk:partnerLinkType>
  
  <wsdl:message name="message">
    <wsdl:part name="text" type="xsd:string" />
  </wsdl:message>
  
  <wsdl:portType name="proxyPortType">
    <wsdl:operation name="proxyOperation">
      <wsdl:input message="me:message" />
      <wsdl:output message="me:message" />
    </wsdl:operation>
  </wsdl:portType>

  <wsdl:portType name="serverPortType">
    <wsdl:operation name="serverOperation">
      <wsdl:input message="me:message" />
      <wsdl:output message="me:message" />
    </wsdl:operation>
  </wsdl:portType>

  
  <wsdl:binding name="proxyBinding" type="me:proxyPortType">
      <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
      
      <wsdl:operation name="proxyOperation">
          <soap:operation soapAction="http://beepell.com/samples/proxy/proxy"/>
          <wsdl:input>
              <soap:body use="literal" namespace="http://beepell.com/samples/proxy/proxy" />
          </wsdl:input>
          <wsdl:output>
              <soap:body use="literal" namespace="http://beepell.com/samples/proxy/proxy" />
          </wsdl:output>
      </wsdl:operation>
  </wsdl:binding>

  <wsdl:binding name="serverBinding" type="me:serverPortType">
      <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
      
      <wsdl:operation name="serverOperation">
          <soap:operation soapAction="http://beepell.com/samples/proxy/proxy"/>
          <wsdl:input>
              <soap:body use="literal" namespace="http://beepell.com/samples/proxy/proxy" />
          </wsdl:input>
          <wsdl:output>
              <soap:body use="literal" namespace="http://beepell.com/samples/proxy/proxy" />
          </wsdl:output>
      </wsdl:operation>
  </wsdl:binding>

  <wsdl:service name="proxyService">
      <wsdl:port name="proxyPort" binding="me:proxyBinding">
          <soap:address location="http://localhost:9040/samples/proxy/proxy"/>
      </wsdl:port>
  </wsdl:service>

  <wsdl:service name="serverService">
      <wsdl:port name="serverPort" binding="me:serverBinding">
          <soap:address location="http://localhost:9050/samples/proxy/server"/>
      </wsdl:port>
  </wsdl:service>
  
</wsdl:definitions>

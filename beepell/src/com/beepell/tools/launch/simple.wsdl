<?xml version="1.0" encoding="ISO-8859-1"?>

<wsdl:definitions 
  targetNamespace="http://beepell.com/tests/exchange/wsdl" 
  xmlns:exc="http://beepell.com/tests/exchange/wsdl" 
  xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype" 
  xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" 
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/">
  
  <plnk:partnerLinkType name="exchangePartnerLinkType">
    <plnk:role name="exchangeProviderRole" portType="exc:exchangePortType" />
  </plnk:partnerLinkType>
  
  <wsdl:message name="exchangeMessage">
    <wsdl:part name="currency" type="xsd:token" />  
    <wsdl:part name="amount" type="xsd:decimal" />
  </wsdl:message>
  
  <wsdl:portType name="exchangePortType">
    <wsdl:operation name="exchangeOperation">
      <wsdl:input message="exc:exchangeMessage" />
      <wsdl:output message="exc:exchangeMessage" />
    </wsdl:operation>
  </wsdl:portType>
  
  <wsdl:binding name="exchangeBinding" type="exc:exchangePortType">
      <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
      
      <wsdl:operation name="exchangeOperation">
          <soap:operation soapAction="http://beepell.com/tests/exchange/wsdl"/>
          <wsdl:input>
              <soap:body use="literal" namespace="http://beepell.com/tests/exchange/wsdl" />
          </wsdl:input>
          <wsdl:output>
              <soap:body use="literal" namespace="http://beepell.com/tests/exchange/wsdl" />
          </wsdl:output>
      </wsdl:operation>
  </wsdl:binding>

  <wsdl:service name="exchangeService">
      <wsdl:port name="exchangePort" binding="exc:exchangeBinding">
          <soap:address location="http://localhost:9090/samples/proxy/definitions/exchange"/>
      </wsdl:port>
  </wsdl:service>
  
</wsdl:definitions>

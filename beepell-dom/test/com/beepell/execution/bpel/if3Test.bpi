<?xml version="1.0" encoding="UTF-8"?>

<instance 
  bpi:state="running"
  name="exchange-instance"
  targetNamespace="http://beepell.com/tests/context/links"  
  xmlns="http://www.itu.dk/research/pls/bpl/bpel/instance"
  xmlns:bpi="http://www.itu.dk/research/pls/bpl/bpel/instance">

  <flow>  
    <links>
      <link name="a1b3" />
      <link name="a1b2" />
    </links>

    <if>
      <sources>
        <source linkName="a1b3">
          <transitionCondition>true()</transitionCondition>
        </source>
        <source linkName="a1b2">
          <transitionCondition>false()</transitionCondition>
        </source>
      </sources>
      <condition>false()</condition>
      <empty name="then" />
    </if>

    <sequence>
      <empty/>
      <empty>
        <targets>
          <joinCondition>$a1b2</joinCondition>
          <target linkName="a1b2" />
        </targets>
      </empty>
      <empty name="A">
        <targets>
          <joinCondition>$a1b3</joinCondition>
          <target linkName="a1b3" />
        </targets>
      </empty>
    </sequence>

  </flow>

</instance>